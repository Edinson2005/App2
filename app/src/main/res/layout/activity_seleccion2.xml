<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Seleccion2">

    <!-- Controles de seleccion-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controles de seleccion2"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el o los idiomas que habla"/>

    <!-- ChechBox elegir muchas opciones -->
    <CheckBox
        android:id="@+id/chIngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingles"/>
    <CheckBox
        android:id="@+id/chEspañol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Español"/>
    <CheckBox
        android:id="@+id/chPortugues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portugues"/>
    <CheckBox
        android:id="@+id/chAleman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aleman"/>

    <!-- RadioGroup/RadioButton solo una opcion de elegir -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione su genero"/>

    <RadioGroup
        android:id="@+id/rgGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbFemenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"/>
        <RadioButton
            android:id="@+id/rbMasculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino"/>

    </RadioGroup>



</LinearLayout>